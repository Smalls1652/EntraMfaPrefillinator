<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <InvariantGlobalization>true</InvariantGlobalization>
    <PublishAot>true</PublishAot>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <OptimizationPreference>Speed</OptimizationPreference>
    <EnableConfigurationBindingGenerator>true</EnableConfigurationBindingGenerator>
  </PropertyGroup>

  <PropertyGroup>
    <RootNamespace>EntraMfaPrefillinator.AuthUpdateApp</RootNamespace>
    <AssemblyName>EntraMfaPrefillinator.AuthUpdateApp</AssemblyName>
    <PackageId>EntraMfaPrefillinator.AuthUpdateApp</PackageId>

    <Description>
      Web API for prefilling MFA details for Microsoft Entra ID.
    </Description>

    <Authors>Timothy Small</Authors>
    <Company>Smalls.Online</Company>
    <Copyright>Â© Smalls.Online</Copyright>

    <RepositoryUrl>https://github.com/Smalls1652/EntraMfaPrefillinator</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <Content Update="appsettings.Development.json" CopyToOutputDirectory="Never"
      CopyToPublishDirectory="Never" Condition="'$(Configuration)'=='Release'" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Lib\Lib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Monitor.OpenTelemetry.Exporter" Version="1.2.0" />
    <PackageReference Include="Dapr.AspNetCore" Version="1.12.0" />
    <PackageReference Include="OpenTelemetry.Exporter.OpenTelemetryProtocol" Version="1.7.0" />
    <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.7.0" />
    <PackageReference Include="OpenTelemetry.Instrumentation.AspNetCore" Version="1.7.0" />
    <PackageReference Include="OpenTelemetry.Instrumentation.Http" Version="1.7.0" />
    <PackageReference Include="OpenTelemetry.ResourceDetectors.Azure" Version="1.0.0-beta.5" />
  </ItemGroup>

  <Target Name="macos-linker-fallback"
    Condition="'$(RuntimeIdentifier)'=='osx-arm64' Or '$(RuntimeIdentifier)'=='osx-x64'"
    BeforeTargets="build">

    <Message Importance="high" Text="AuthUpdateApp -> ðŸŸ§ Falling back to old linker, due to some issues on macOS." />

    <ItemGroup>
      <LinkerArg Include="-Wl,-ld_classic" />
    </ItemGroup>
  </Target>

</Project>