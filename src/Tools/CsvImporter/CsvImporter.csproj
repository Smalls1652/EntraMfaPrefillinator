<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <PublishAot>true</PublishAot>
  </PropertyGroup>

  <PropertyGroup>
    <EnableArtifactZip>false</EnableArtifactZip>
    <ZipArtifactsPath>..\..\..\artifacts</ZipArtifactsPath>
    <EnableBuildOutDir>false</EnableBuildOutDir>
    <BuildOutDir>..\..\..\build\CsvImporter</BuildOutDir>
  </PropertyGroup>

  <PropertyGroup>
    <RootNamespace>EntraMfaPrefillinator.Tools.CsvImporter</RootNamespace>
    <AssemblyName>entramfacsvimporter</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Lib\Lib.csproj" />
  </ItemGroup>

  <Target Name="CopyToBuildOutDir" AfterTargets="Publish" Condition="'$(EnableBuildOutDir)'=='true'">
    <ItemGroup>
      <PublishedFiles Include="$(OutputPath)\native\**\*.*" />
    </ItemGroup>

    <PropertyGroup>
      <BuildOutDirAbsolutePath>$([System.IO.Path]::GetFullPath('$(BuildOutDir)'))</BuildOutDirAbsolutePath>
    </PropertyGroup>

    <MakeDir Directories="$(ZipArtifactsPathAbsolutePath)" />

    <Copy SourceFiles="@(PublishedFiles)" DestinationFolder="$(BuildOutDir)\%(RecursiveDir)" />

    <Message
      Importance="high"
      Text="$(MSBuildProjectName)\native -> $(BuildOutDirAbsolutePath)" />
  </Target>

  <Target Name="CreateArtifactsZip" AfterTargets="Publish"
    Condition="'$(EnableArtifactZip)'=='true'">
    <PropertyGroup>
      <ZipArtifactsPathAbsolutePath>$([System.IO.Path]::GetFullPath('$(ZipArtifactsPath)'))</ZipArtifactsPathAbsolutePath>
    </PropertyGroup>

    <MakeDir Directories="$(ZipArtifactsPathAbsolutePath)" />

    <ZipDirectory
      SourceDirectory="$(BuildOutDirAbsolutePath)"
      DestinationFile="$(ZipArtifactsPath)\CsvImporter_$(RuntimeIdentifier).zip"
      Overwrite="true" />
  </Target>

</Project>